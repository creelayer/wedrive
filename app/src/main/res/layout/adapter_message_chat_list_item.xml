<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item"
    style="@style/Messenger.ChatList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/list_item_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/btn_radio_shape" />

    <RelativeLayout
        style="@style/Messenger.ChatListContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/list_item_name"
            style="@style/Messenger.UserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:text="Name" />

        <TextView
            android:id="@+id/list_item_message"
            style="@style/Messenger.ChatListMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_item_name"
            android:layout_marginTop="0dp"
            android:text="Message" />

        <TextView
            android:id="@+id/list_item_time"
            style="@style/Messenger.ChatListContent.Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="23:34" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:background="@color/message_grey_line" />

    </RelativeLayout>
</LinearLayout>
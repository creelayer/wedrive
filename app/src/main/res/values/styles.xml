<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="p20">
        <item name="android:padding">20dp</item>
    </style>


    <style name="YellowRoundedButton">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/btn_yellow_bg_rounded</item>
    </style>


    <style name="DarkRoundedButton">
        <item name="android:layout_height">42dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:background">@drawable/btn_dark_bg_rounded</item>
    </style>


    <style name="Nav"></style>

    <style name="Nav.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Nav.Status">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@drawable/nav_status_bg_rounded</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>


    <style name="LoginBox">
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="LoginBoxTitle">
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="LoginBoxSubButton">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name="TextCenterButton">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name="PinTitle">
        <item name="android:layout_marginTop">70dp</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="PinSubTitle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PinNumber">
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:textSize">46sp</item>
        <item name="android:textAlignment">center</item>
    </style>


</resources>

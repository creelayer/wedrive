<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@color/black</item>

        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>

    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-condensed-light</item>
    </style>

    <style name="ButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">sans-serif-condensed-light</item>
    </style>


    <style name="p10">
        <item name="android:padding">10dp</item>
    </style>

    <style name="p20">
        <item name="android:padding">20dp</item>
    </style>


    <style name="YellowRoundedButton">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/btn_yellow_bg_rounded</item>
    </style>


    <style name="DarkRoundedButton">
        <item name="android:layout_height">42dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:background">@drawable/btn_dark_bg_rounded</item>
    </style>


    <!--Nav-->

    <style name="Nav">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Nav.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Nav.Widget"></style>

    <style name="Nav.Widget.Row">
        <item name="android:paddingRight">30dp</item>
    </style>

    <style name="Nav.Widget.Icon">
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="Nav.Widget.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Nav.Widget.SubText">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/dark_yellow</item>
    </style>

    <style name="Nav.Status">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@drawable/nav_status_bg_rounded</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <!--Nav-End-->

    <!--Login pages-->

    <style name="LoginBox">
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="LoginBoxTitle">
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="LoginBoxSubButton">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!--Login pages end-->

    <!--Messenger-->

    <style name="Messenger">
    </style>

    <style name="Messenger.ChatList">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Messenger.ChatListContent">
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="Messenger.ChatListMessage">
        <item name="android:textColor">@color/message_grey_text</item>
    </style>

    <style name="Messenger.ChatListContent.Time">
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/message_grey_time</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Messenger.UserName">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Messenger.Item">
        <item name="android:background">@drawable/message_transparent_bg_rounded</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="Messenger.Item.Received" >
        <item name="android:background">@drawable/message_yellow_bg_rounded</item>
    </style>

    <style name="Messenger.DayTime">
        <item name="android:textColor">@color/message_grey_time</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="Messenger.Message">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Messenger.Time">
        <item name="android:textColor">@color/message_grey_time</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="Messenger.Message.Input">
        <item name="android:background">@drawable/message_input_bg</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <!--Messenger end-->

    <style name="TextCenterButton">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name="PinTitle">
        <item name="android:layout_marginTop">70dp</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="PinSubTitle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PinNumber">
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:textSize">46sp</item>
        <item name="android:textAlignment">center</item>
    </style>


</resources>

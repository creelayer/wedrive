<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/grey</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="btnLarge" parent="Theme.AppCompat">
        <item name="android:textColor">#000</item>
        <item name="android:textAllCaps">true</item>
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
    </style>

    <style name="label1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="fieldLabel" >
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">#BEBDBD</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="fieldInput" parent="TextAppearance.AppCompat">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@drawable/edit_text_field_bg</item>
    </style>

    <style name="fieldHint" >
        <item name="android:padding">2dp</item>
        <item name="android:textColor">#BEBDBD</item>
    </style>



    <style name="routeListItem" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">10dp</item>
        <item name="contentPaddingTop">8dp</item>
        <item name="contentPaddingLeft">15dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>



    <style name="bottomSheet" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">10dp</item>
        <item name="contentPaddingTop">8dp</item>
        <item name="contentPaddingLeft">15dp</item>
        <item name="cardBackgroundColor">@color/grey</item>
    </style>





<!-- inform messages -->



    <style name="informDark" parent="Theme.AppCompat.Light">
        <item name="cardBackgroundColor">@color/informBgDark</item>
        <item name="contentPaddingBottom">10dp</item>
    </style>






    <style name="informLabels" parent="Theme.AppCompat.Light">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="btnPrimary" parent="Theme.AppCompat.Light">
        <item name="android:textColor">#fff</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="btn" parent="btnPrimary">
        <item name="android:textColor">#1E78B8</item>
    </style>

</resources>
